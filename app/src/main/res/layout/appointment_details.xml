<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/userDetailsCardView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_1sdp"
        card_view:cardElevation="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <!--1st Part-->
                    <RelativeLayout
                        android:id="@+id/allfieldsRelativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">
                        <RelativeLayout
                            android:id="@+id/part3RelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/aptDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Appointment Details"
                                android:textColor="@color/colorred500"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:id="@+id/imgApyDetailsArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/chevron_down1" />
                        </RelativeLayout>
                        <View
                            android:id="@+id/lineView1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_below="@+id/part3RelativeLayout"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/colorBelowLayout" />
                        <!-- content Of 1st Form  -->
                        <android.support.v7.widget.CardView
                            android:id="@+id/otherDetailsCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lineView1"
                            android:layout_margin="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/dateLbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Date :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="10 mar 2017"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/timelbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/dateLbl"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Time :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/date"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="4:30 Pm"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/countrylbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/timelbl"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Country :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/country"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/time"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="India"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/citylbl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/countrylbl"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="City :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/country"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="Mumbai"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/aptStatusLbl"
                                    android:layout_below="@+id/citylbl"
                                    android:text="Status :"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/city"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="Confirm"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/aptBookThroughLbl"
                                    android:layout_below="@+id/aptStatusLbl"
                                    android:text="Book Through :"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/bookThrough"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/aptStatusLbl"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:text="SMS"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/part1RelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherDetailsCardView"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtPersonalDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Person Details"
                                android:textColor="@color/colorred500"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:id="@+id/imgMarchandizingArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/chevron_down1" />
                        </RelativeLayout>
                        <View
                            android:id="@+id/lineView2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_below="@+id/part1RelativeLayout"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/colorBelowLayout" />
                        <!-- content Of 1st Form  -->
                        <android.support.v7.widget.CardView
                            android:id="@+id/personalDetailsCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lineView2"
                            android:layout_margin="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <RelativeLayout
                                    android:id="@+id/extraDetailsOfStudent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/rollNoLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:text="Name :"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/rollNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:text="Pratik Sonawane"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true" />

                                    <TextView
                                        android:id="@+id/GrNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/rollNo"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_alignParentEnd="true"
                                        android:textColor="@color/fabBtnColor"
                                        android:layout_alignParentRight="true"
                                        android:text="9874563210"
                                        android:textSize="@dimen/_14sdp" />

                                    <TextView
                                        android:id="@+id/GrNoLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:text="Contact No :"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold"
                                        android:layout_below="@+id/rollNo"
                                        android:layout_alignStart="@+id/rollNoLabel" />
                                </RelativeLayout>

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <!--2nd Part-->
                        <RelativeLayout
                            android:id="@+id/part2RelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/personalDetailsCardView"
                            android:layout_margin="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/txtSchoolDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Hotel Details"
                                android:textColor="@color/colorred500"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:id="@+id/imgSchoolDetailsArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/chevron_down1" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/lineView3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_below="@+id/part2RelativeLayout"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@color/colorBelowLayout" />
                        <!-- content Of 2nd Form  -->
                        <android.support.v7.widget.CardView
                            android:id="@+id/schoolDetailsCardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lineView3"
                            android:layout_margin="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/schoolNameLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Hotel Name :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/schoolName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_toRightOf="@+id/schoolNameLabel"
                                    android:text="Sahara InterNational"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/schoolAddressLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/schoolName"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:text="Contact No :"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/schoolAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:textColor="@color/fabBtnColor"
                                    android:layout_below="@+id/schoolName"
                                    android:text="1234569870"
                                    android:textSize="@dimen/_14sdp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>